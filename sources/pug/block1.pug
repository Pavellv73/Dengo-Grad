                    div.summ-blocks
                        div.summ-block
                            div.one-sum
                                p Сумма займа:
                                span 4 500 р.
                            div.switch.one-s
                                input(type="range" min="2000" max="6000" step="500" oninput="")

                        div.summ-block
                            div.one-sum
                                p Срок займа:
                                span 12 дней
                            div.switch.two-s
                                input(type="range" min="3" max="30" step="1" oninput="")

                    div.content-row
                        div.end-blocks
                            div.end-block
                                p Комиссия:
                                span 2 170

                            div.end-block
                                p Итого к оплате:
                                span 8 170

                            div.end-block
                                p Оплатить до:
                                span 21.07.17

                        div.good-block
                            div.gb
                                p Вероятность <br>одобрения:
                                span 97%
                            button.button-red Получить деньги




