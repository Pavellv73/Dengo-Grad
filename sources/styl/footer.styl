footer
  width 100%
  height auto
  box-shadow 0 0 10px rgba(40, 115, 137, 0.4)
  background-image linear-gradient(180deg, #1ea0c4 0%, #43afcf 100%)

  .footer-content
    width 100%
    height auto
    padding 13px 0
    display flex
    display -webkit-flex
    justify-content center
    align-items center
    flex-direction column
    @media (min-width 768px)
      flex-direction row
      justify-content space-between
      padding-top 13px
      padding-bottom 10px

    .map-polit
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column
      margin-bottom 11px
      @media (min-width 768px)
        width auto
        justify-content flex-start
        align-items flex-start
        margin-bottom 0

      a
        color #ffffff
        font-family "GillSansLightC"
        font-size 14px
        font-weight 400
        letter-spacing 1px
        text-decoration underline
        transition all 0.2s ease
        &:hover
          color #d4f6ff


      .politic
        opacity 0.5
        color #ffffff
        font-family "GillSansLightC"
        font-size 14px
        font-weight 400
        letter-spacing 1px
        text-decoration none
        transition all 0.2s ease
        &:hover
          opacity 1.0



#politic
  display none
  height 80%
  text-align center

  h2
    color #1ea0c4
    margin-bottom 20px