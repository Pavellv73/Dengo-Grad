h()
  columns = 0 1 2 3 4
  for col in columns
    .h-{col}
      width (col/columns[-1]*100) + '%'
      flex-basis auto
      box-sizing border-box
      display block
      padding-left 5px
      padding-right 5px
  for col in columns
    .h-offset-{col}
      margin-left: (col/columns[-1]*100) + '%'

t()
  columns = 0 1 2 3 4
  for col in columns
    .t-{col}
      width (col/columns[-1]*100) + '%'
      flex-basis auto
      box-sizing border-box
      display block
      padding-left 11px
      padding-right 11px
  for col in columns
    .t-offset-{col}
      margin-left: (col/columns[-1]*100) + '%'

d()
  columns = 0 1 2 3 4
  for col in columns
    .d-{col}
      width (col/columns[-1]*100) + '%'
      flex-basis auto
      box-sizing border-box
      display block
      padding-left 20px
      padding-right 20px
  for col in columns
    .d-offset-{col}
      margin-left: (col/columns[-1]*100) + '%'

d-screen = 1280px
t-screen = 768px
h-screen = 320px

.cnt
  box-sizing border-box
  padding 0 18px
  width: 100%
  @media(min-width: t-screen)
    padding 0 34px
    width 100%

  @media(min-width: d-screen)
    padding 0 115px
    margin 0 auto

.row
  max-width 1280px
  flex-basis 100%
  margin 0 auto
  flex-grow 1
  display flex
  display -webkit-flex
  flex-flow column
  justify-content flex-start
  align-content flex-start

.button-blue
  width 258px
  height 40px
  box-shadow 0 0 10px rgba(40, 115, 137, 0.4)
  border-radius 4px
  background-image linear-gradient(180deg, #1ea0c4 0%, #43afcf 100%)
  padding 14px 0
  box-sizing border-box
  color #ffffff
  font-family "GillSansC"
  font-size 14px
  font-weight 400
  letter-spacing 1px
  text-transform uppercase
  transition all 0.2s ease
  border none
  &:hover
    background-image linear-gradient(to top, #3ea4c3 0%, #1992b3 100%)



.button-white
  width 258px
  height 40px
  border-radius 4px
  opacity 0.3
  padding 12px 0
  box-sizing border-box
  color #003459
  font-family "GillSansC"
  font-size 14px
  font-weight 400
  text-transform uppercase
  letter-spacing 1px
  border none
  transition all 0.2s ease
  &:hover
    border 1px solid #003459
    background-color #d5f6ff

.button-red
  width 214px
  height 40px
  box-shadow 0 1px 4px rgba(228, 60, 57, 0.3)
  border-radius 3px
  background-color #e04a4a
  color #ffffff
  font-family "GillSansC"
  font-size 16px
  font-weight 600
  transition all 0.2s ease
  &:hover
    background-color #d84444

.lk-button
  width 163px
  height 32px
  box-shadow 0 0 10px rgba(40, 115, 137, 0.4)
  border-radius 4px
  background-color #ffffff
  padding 5px 10px
  box-sizing border-box
  display flex
  display -webkit-flex
  justify-content space-between
  align-items center
  flex-direction row
  border none

  img
    width 22px
    height 22px

  p
    color #31a7c9
    font-family "GillSansC"
    font-size 14px
    font-weight 400
    letter-spacing 1px

h1
  color #5e6b96
