.block6
  width 100%
  height auto

  .block6-content
    width 100%
    height auto
    padding-top 43px
    padding-bottom 55px
    @media (min-width 768px)
      padding-top 64px
      padding-bottom 84px

    .block6-head
      width 100%
      height auto
      margin-bottom 39px
      @media (min-width 768px)
        margin-bottom 65px

      h2
        color #23a2c6
        font-family "GillSansC"
        font-size 26px
        line-height 27px
        font-weight 400
        letter-spacing 1px
        text-align center
        margin-bottom 6px
        @media (min-width 768px)
          font-size 34px
          font-weight 400
          line-height 35px

      p
        color #333333
        font-family "GillSansLightC"
        font-size 18px
        font-weight 300
        letter-spacing 1px
        text-align center
        @media (min-width 768px)
          font-size 22px
          font-weight 300

    .maps
      width 100%
      height 255px
      background-image url("img/map1.png")
      background-position center
      background-size auto 255px
      background-repeat no-repeat
      @media (min-width 768px)
        height 344px
        background-size auto 344px
      @media (min-width 1280px)
        height 490px
        background-size auto 490px
