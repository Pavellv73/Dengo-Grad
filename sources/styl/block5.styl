.block5
  width 100%
  height auto
  background-image url("img/bg3.png")
  background-repeat repeat
  background-size 100%
  background-position center center

  .block5-content
    width 100%
    height auto
    padding-top 37px
    padding-bottom 38px
    @media (min-width 768px)
      padding-top 65px
      padding-bottom 56px
    @media (min-width 1280px)
      padding-top 80px

    .block5-head
      width 100%
      height auto
      margin-bottom 32px
      @media (min-width 768px)
        margin-bottom 48px

      h2
        color #23a2c6
        font-family "GillSansC"
        font-size 26px
        font-weight 400
        letter-spacing 1px
        line-height 25px
        text-align center
        margin-bottom 6px
        @media (min-width 768px)
          font-size 34px
          line-height 35px
          font-weight 400
          letter-spacing 1px

      p
        color #333333
        font-family "GillSansLightC"
        font-size 18px
        font-weight 300
        letter-spacing 1px
        text-align center
        line-height 19px
        @media (min-width 768px)
          font-size 22px
          font-weight 300
          letter-spacing 1px
          line-height 23px


    .reviews-slider
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      position relative
      @media (min-width 768px)
        height 400px

      .slick-pre
        width 19px
        height 39px
        background-image url("img/prev.svg")
        background-size 100%
        background-repeat no-repeat
        position absolute
        left 0
        &:before
          display none

      .slick-nex
        width 19px
        height 39px
        background-image url("img/next.svg")
        background-size 100%
        background-repeat no-repeat
        position absolute
        right 0
        &:before
          display none


      .slick-slider
        width 227px
        height 298px
        @media (min-width 768px)
          width 592px
          height 400px
        @media (min-width 1280px)
          width 914px

        .slick-slide
          width 227px
          height 315px
          box-shadow 0 2px 16px rgba(0, 0, 0, 0.1)
          border-radius 3px
          background-color #ffffff
          @media (min-width 768px)
            margin 0 9px
            width 48%
            height 360px


          .slide-img
            width 100%
            height auto
            overflow hidden
            display flex
            display -webkit-flex
            justify-content center
            align-items center
            padding-top 26px
            padding-bottom 26px
            box-sizing border-box


            img
              width 80px
              height 80px
              @media (min-width 768px)
                width 100px
                height 100px


          .slide-text
            width 100%
            height auto
            padding-bottom 27px
            box-sizing border-box
            padding-right 29px
            padding-left 20px

            h3
              font-size 16px
              font-weight 600
              letter-spacing 1px
              text-align center
              margin-bottom 4px
              @media (min-width 768px)
                font-size 19px
                font-weight 600
                letter-spacing 1px

            .sity
              margin-bottom 20px
              @media (min-width 768px)
                margin-bottom 28px

            p
              font-family "GillSansLightC"
              font-size 14px
              font-weight 300
              letter-spacing 1px
              text-align center
              line-height 16px
              @media (min-width 768px)
                font-size 16px
                font-weight 300
                letter-spacing 1px
                line-height 18px


