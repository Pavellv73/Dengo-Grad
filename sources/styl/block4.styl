.block4
  width 100%
  height auto
  background-image url("img/bg2.png")
  background-repeat no-repeat
  background-size cover
  background-position center center

  .block4-content
    width 100%
    height auto
    padding-top 32px
    padding-bottom 23px
    box-sizing border-box
    @media (min-width 768px)
      padding-top 51px
      padding-bottom 40px

    .block4-head
      width 100%
      height auto

      h2
        color #5e6b96
        font-family "GillSansC"
        font-size 26px
        font-weight 600
        line-height 28px
        text-align center
        margin-bottom 6px
        @media (min-width 768px)
          font-size 34px
          font-weight 400
          letter-spacing 1px

      p
        color #434f77
        font-family "GillSansLightC"
        font-size 17px
        font-weight 300
        letter-spacing 1px
        text-align center
        @media (min-width 768px)
          font-size 22px
          font-weight 300
          letter-spacing 1px
          margin-bottom 41px

          br
            &:nth-of-type(2)
              display none
        @media (min-width 1280px)
          br
            display none

    .borrowing-block
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column

      .borrowing
        width 282px
        height auto
        box-shadow 0 2px 15px rgba(0, 0, 0, 0.1)
        border-radius 8px
        border 1px solid #e4e4e4
        background-color #ffffff
        @media (min-width 768px)
          width 558px

        .borrowing-sum
          border-radius 7px 7px 0 0
          background-color #edfbff
          padding-top 28px
          padding-bottom 16px
          padding-left 16px
          padding-right 16px
          @media (min-width 768px)
            padding-left 90px
            padding-right 90px
            display flex
            display -webkit-flex
            justify-content center
            align-items center
            flex-direction column

          .sum
            width 100%
            height auto
            display flex
            display -webkit-flex
            justify-content space-between
            align-items center
            flex-direction row
            margin-bottom 18px
            @media (min-width 1280px)
              width 80%

            p
              color #0b0f18
              font-family "GillSansC"
              font-size 17px
              font-weight 600
              letter-spacing 1px
              margin-top 0

            span
              color #0b0f18
              font-family "GillSansLightC"
              font-weight 300
              letter-spacing 1px
              font-size 30px

              span
                font-size 18px

          input[type="range"]
            width 213px
            height 7px
            box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.07)
            border-radius 2px
            background-color #e7e7e7
            @media (min-width 768px)
              width 305px

          input[type=range]::-webkit-slider-runnable-track
            width 100%
            height 8.4px
            cursor pointer
            animate 0.2s
            box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.07)
            border-radius 2px
            background-color #e7e7e7
            border 0

          input[type=range]::-webkit-slider-thumb
            box-shadow 2.2px 2.2px 2.9px rgba(0, 0, 0, 0.17), 0px 0px 2.2px rgba(13, 13, 13, 0.17)
            border 5px solid rgba(0, 0, 0, 0.13)
            height 20px
            width 20px
            border-radius 50px
            background #ffffff
            cursor pointer
            -webkit-appearance none
            margin-top -6px

          input[type=range]::-moz-range-track
            width 100%
            height 8.4px
            cursor pointer
            animate 0.2s
            box-shadow 1px 1px 1px #000000, 0px 0px 1px #0d0d0d
            background #3071a9
            border-radius 1.3px
            border 0.2px solid #010101

          input[type=range]::-moz-range-thumb
            box-shadow 2.2px 2.2px 2.9px rgba(0, 0, 0, 0.17), 0px 0px 2.2px rgba(13, 13, 13, 0.17)
            border 5px solid rgba(0, 0, 0, 0.13)
            height 20px
            width 20px
            border-radius 50px
            background #ffffff
            cursor pointer
            -webkit-appearance none
            margin-top -6px

          input[type=range]::-ms-track
            width 100%
            height 8.4px
            cursor pointer
            animate 0.2s
            background transparent
            border-color transparent
            border-width 16px 0
            color transparent

          input[type=range]::-ms-thumb
            width 20px
            height 20px
            box-shadow 0 1px 1px rgba(0, 0, 0, 0.14)
            background-color #ffffff
            cursor pointer

          .one-ss
            position relative
            @media (min-width 768px)
              margin-bottom 16px
            &:before
              content "2 000 руб."
              width auto
              height 14px
              opacity 0.25
              color #0b0f18
              font-family "GillSansLightC"
              font-size 12px
              font-weight 300
              letter-spacing 1px
              position absolute
              top 20px
              left 0
            &:after
              content "6 000 руб."
              width auto
              height 14px
              opacity 0.25
              color #0b0f18
              font-family "GillSansLightC"
              font-size 12px
              font-weight 300
              letter-spacing 1px
              position absolute
              top 20px
              right 0


          p
            color #333333
            font-family "GillSansLightC"
            font-size 15px
            font-weight 300
            letter-spacing 1px
            text-align center
            margin-top 22px
            @media (min-width 768px)
              br
                display none
            @media (min-width 1280px)
              font-size 14px


        .application
          width 100%
          height auto
          display flex
          display -webkit-flex
          justify-content center
          align-items center
          flex-direction column
          padding-top 24px
          padding-bottom 12px
          box-sizing border-box
          @media (min-width 768px)
            padding-top 48px
            padding-bottom 31px

          button
            margin-bottom 8px
            @media (min-width 768px)
              margin-bottom 12px

          p
            color #23a2c6
            font-family "GillSansLightC"
            font-size 18px
            font-weight 300
            letter-spacing 1px
            @media (min-width 768px)
              font-size 20px

