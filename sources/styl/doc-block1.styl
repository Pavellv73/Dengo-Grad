.doc-block1
  width 100%
  height auto
  background-color #ffffff
  background-image url("img/bg.png")
  background-repeat no-repeat
  background-size auto
  background-position bottom center

  .doc-block1-content
    width 100%
    height auto
    padding-top 40px
    padding-bottom 40px
    box-sizing border-box
    @media (min-width 768px)
      padding-top 48px
      padding-bottom 68px
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column

    .doc-head
      width 100%
      height auto
      margin-bottom 40px
      @media (min-width 768px)
        margin-bottom 40px

      h2
        color #23a2c6
        font-family "GillSansC"
        font-size 26px
        font-weight 100
        line-height 28px
        text-align center
        margin-bottom 6px
        @media (min-width 768px)
          font-size 34px
          font-weight 400

    .sectificate-block
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column
      @media (min-width 768px)
        flex-flow row wrap
        justify-content space-around
        align-items flex-start

      .sertificate
        width 100%
        height auto
        display flex
        display -webkit-flex
        justify-content center
        align-items center
        flex-direction column
        margin-bottom 32px
        @media (min-width 768px)
          width 50%

        @media (min-width 1280px)
          width 25%

        a
          width auto
          margin-bottom 16px
          img
            box-shadow: 0 0 9px 1px rgba(0,0,0,0.30)

        p
          color #333333
          font-family "GillSansC"
          font-size 18px
          letter-spacing 0.33px
          text-align center

    .links-block
      width 100%
      height auto
      display none
      @media (min-width 768px)
        display flex
        display -webkit-flex
        justify-content center
        align-items center
        flex-direction column
        padding-top 30px
      @media (min-width 1280px)
        flex-direction row



      .link-block
        width 205px
        height auto
        display flex
        display -webkit-flex
        justify-content flex-start
        align-items flex-start
        flex-direction row
        margin-bottom 36px
        @media (min-width 1280px)
          margin-bottom 0
          margin 0 50px

        img
          width 25px
          height 25px
          margin-right 16px

        a
          color #23a2c6
          font-family "GillSansC"
          font-size 18px
          letter-spacing 0.33px
          text-decoration underline