.block7
  width 100%
  height auto
  @media (min-width 768px)
    background-image url("img/bg.png"), linear-gradient(180deg, #ffffff 0%, #fbfafb 100%)
    background-position bottom center
    background-size auto
    background-repeat repeat-y

  .block7-content
    width 100%
    height auto
    display flex
    display -webkit-flex
    justify-content center
    align-items center
    padding-bottom 34px

    .contacts-block
      width 282px
      height auto
      padding-top 32px
      padding-bottom 44px
      padding-left 22px
      padding-right 22px
      box-sizing border-box
      box-shadow 0 3px 20px rgba(0, 0, 0, 0.1)
      background-image url("img/bg4.png")
      background-position top  right
      background-repeat no-repeat
      background-size auto
      background-color #ffffff
      @media (min-width 768px)
        width 703px
        padding-left 40px
        padding-right 40px
        padding-bottom 0

      .block7-head
        width 100%
        height auto
        margin-bottom 41px

        h2
          color #23a2c6
          font-family "GillSansC"
          font-size 26px
          font-weight 400
          letter-spacing 1px
          line-height 27px
          text-align center
          margin-bottom 6px
          @media (min-width 768px)
            font-size 34px
            font-weight 400
            line-height 35px

        p
          color #333333
          font-family "GillSansLightC"
          font-size 20px
          font-weight 300
          letter-spacing 1px
          text-align center
          @media (min-width 768px)
            font-size 22px
            font-weight 300
            line-height 23px

      .contact
        width 100%
        height auto
        @media (min-width 768px)
          display flex
          display -webkit-flex
          justify-content center
          align-items center
          flex-direction row

        .cont-one
          width 100%
          height auto
          @media (min-width 768px)
            width 44%

          .phone, .email, .time
            width 100%
            height auto
            margin-bottom 32px

            p
              color #333333
              font-family "GillSansLightC"
              font-size 20px
              font-weight 300
              letter-spacing 1px
              margin-bottom 8px

            a
              h2
                color #23a2c6
                font-family "GillSansC"
                font-size 24px
                font-weight 300
                letter-spacing 1px
                transition all 0.2s ease
                &:hover
                  color #5bd1ff


            h2
              color #23a2c6
              font-family "GillSansC"
              font-size 24px
              font-weight 300
              letter-spacing 1px

        .cont-two
          width 100%
          height auto
          @media (min-width 768px)
            width 56%

          .name, .inn, .addres
            width 100%
            height auto
            margin-bottom 32px

            p
              color #333333
              font-family "GillSansLightC"
              font-size 20px
              font-weight 300
              letter-spacing 1px
              margin-bottom 8px

            h2
              color #23a2c6
              font-family "GillSansC"
              font-size 24px
              font-weight 300
              letter-spacing 1px