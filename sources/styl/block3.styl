.block3
  width 100%
  height auto
  background-image url("img/bg.png")
  background-size auto
  background-repeat repeat-y
  background-color #faf9fa
  background-position bottom

  .block3-content
    width 100%
    height auto
    padding-top 20px
    padding-bottom 36px
    max-width 1032px


    .block3-head
      width 100%
      height auto
      margin-bottom 25px

      h2
        color #23a2c6
        font-family "GillSansC"
        font-size 26px
        font-weight 400
        letter-spacing 1px
        line-height 25px
        margin-bottom 6px
        text-align center
        @media (min-width 768px)
          font-size 34px
          font-weight 400
          letter-spacing 1px

          br
            display none

      p
        color #333333
        font-family "GillSansLightC"
        font-size 18px
        font-weight 300
        letter-spacing 1px
        text-align center
        @media (min-width 768px)
          font-size 22px
          font-weight 300
          letter-spacing 1px

          br
            display none

    .steps-blocks
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-flow row wrap
      position relative
      @media (min-width 768px)
        align-items flex-start


      .step-block
        width 100%
        height auto
        display flex
        display -webkit-flex
        justify-content center
        align-items center
        flex-direction column
        margin-bottom 42px
        @media (min-width 768px)
          width 50%
          margin-bottom 31px
        @media (min-width 1280px)
          width 25%
          margin-bottom 0


        .step-img
          width 100%
          height 145px
          display flex
          display -webkit-flex
          justify-content center
          align-items center
          @media (min-width 1280px)
            justify-content flex-start

          img
            width 145px
            background-blend-mode darken

        .step-head
          width 100%
          height auto
          @media (min-width 768px)
            width 280px
          @media (min-width 1280px)
            width 220px

          h3
            color #23a2c6
            font-family "GillSansC"
            font-size 20px
            font-weight 600
            text-align center
            margin-bottom 24px
            line-height 21px

            br
              display none
            @media (min-width 768px)
              text-align center
            @media (min-width 1280px)
              text-align left

              br
                display block


        .step-text
          width 100%
          height auto
          @media (min-width 768px)
            width 280px
          @media (min-width 1280px)
            width 220px

          p
            color #333333
            font-family "GillSansLightC"
            font-size 17px
            font-weight 100
            letter-spacing 1px
            text-align center
            line-height 18px
            @media (min-width 768px)
              text-align left


      .line
        width 282px
        height 0
        border 1px dashed #34a9ca
        margin-bottom 22px

      .o-l
        @media (min-width 768px)
          position absolute
          top 70px
          width 199px
        @media (min-width 1280px)
          top 74px
          left 144px
          width 120px
      .tr-l
        @media (min-width 768px)
          position absolute
          width 199px
          top 62%
        @media (min-width 1280px)
          top 74px
          right 258px
          width 120px

      .t-l
        @media (min-width 768px)
          display none
        @media (min-width 1280px)
          display block
          position absolute
          top 74px
          left 390px
          width 120px


