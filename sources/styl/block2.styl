.block2
  width 100%
  height auto
  background-image linear-gradient(180deg, #ffffff 0%, #fbfafb 100%)

  .block2-content
    width 100%
    height auto
    padding-top 40px
    padding-bottom 20px

    .block2-head
      width 100%
      height auto
      margin-bottom 40px

      h2
        color #23a2c6
        font-family "GillSansC"
        font-size 26px
        font-weight 400
        line-height 25px
        letter-spacing 1px
        margin-bottom 6px
        text-align center
        @media (min-width 768px)
          font-size 34px
          font-weight 400
          letter-spacing 1px
          margin-bottom 10px


      p
        color #333333
        font-family "GillSansLightC"
        font-size 18px
        font-weight 300
        letter-spacing 1px
        text-align center
        @media (min-width 768px)
          font-size 22px
          font-weight 300
          letter-spacing 1px

          br
            display none

    .slider-advantages
      width 100%
      height 288px
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      position relative
      @media (min-width 768px)
        height 400px

      .slick-prev
        width 19px
        height 39px
        background-image url("img/prev.svg")
        background-size 100%
        background-repeat no-repeat
        position absolute
        left 0
        &:before
          display none

      .slick-next
        width 19px
        height 39px
        background-image url("img/next.svg")
        background-size 100%
        background-repeat no-repeat
        position absolute
        right 0
        &:before
          display none


      .slick-slider
        width 227px
        height 298px
        @media (min-width 768px)
          width 592px
          height 400px
        @media (min-width 1280px)
          width 914px

        .slick-slide
          width 227px
          height 288px
          box-shadow 0 2px 16px rgba(0, 0, 0, 0.1)
          border-radius 3px
          background-color #ffffff
          @media (min-width 768px)
            margin 0 9px
            width 48%
            height 360px


          .slide-img
            width 100%
            height 139px
            overflow hidden
            @media (min-width 768px)
              height 174px

            img
              width 100%


          .slide-text
            width 100%
            height auto
            padding-top 27px
            padding-bottom 27px
            box-sizing border-box
            padding-right 8px
            padding-left 8px

            h3
              font-size 16px
              font-weight 600
              letter-spacing 1px
              text-align center
              @media (min-width 768px)
                font-size 19px
                font-weight 600
                letter-spacing 1px
                margin-bottom 15px

            p
              font-family "GillSansLightC"
              font-size 14px
              font-weight 300
              letter-spacing 1px
              text-align center
              line-height 16px
              @media (min-width 768px)
                font-size 16px
                font-weight 300
                letter-spacing 1px
                line-height 18px



